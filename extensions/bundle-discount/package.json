{
  "name": "bundle-discount",
  "version": "0.0.1",
  "license": "UNLICENSED",
  "type": "module",
  "scripts": {
    "shopify": "npm exec -- shopify",
    "typegen": "npm exec -- shopify app function typegen",
    "build": "npm exec -- shopify app function build",
    "preview": "npm exec -- shopify app function run",
    "test": "vitest",
    "test:unit": "vitest run tests/",
    "check:fixtures": "vitest run tests/",
    "debug:scenarios": "BUNDLE_KIT_DEBUG=1 vitest run --config vitest.debug.config.js"
  },
  "codegen": {
    "schema": "schema.graphql",
    "documents": "src/*.graphql",
    "generates": {
      "./generated/api.ts": {
        "plugins": [
          "typescript",
          "typescript-operations"
        ]
      }
    },
    "config": {
      "omitOperationSuffix": true
    }
  },
  "dependencies": {
    "@shopify/shopify_function": "^2.0.1"
  },
  "devDependencies": {
    "@shopify/shopify-function-test-helpers": "^1.0.0",
    "vitest": "^3.2.4"
  }
}
